<!-- Additional head content for PiSovereign Documentation -->

<!-- Version metadata (will be replaced by CI) -->
<meta name="pisovereign-version" content="{{PISOVEREIGN_VERSION}}">

<!-- Favicon -->
<link rel="icon" type="image/png" href="/PiSovereign/favicon.png">

<!-- Version switcher styles -->
<link rel="stylesheet" href="/PiSovereign/theme/css/version-switcher.css">

<!-- Custom fonts -->
<style>
    :root {
        --content-max-width: 900px;
    }
    
    /* Improved code block styling */
    pre {
        border-radius: 6px;
    }
    
    /* Better table styling */
    table {
        border-collapse: collapse;
        width: 100%;
        margin: 1rem 0;
    }
    
    table th,
    table td {
        border: 1px solid var(--table-border-color);
        padding: 0.5rem 1rem;
        text-align: left;
    }
    
    table th {
        background-color: var(--table-header-bg);
        font-weight: 600;
    }
    
    table tr:nth-child(even) {
        background-color: var(--table-alternate-bg);
    }
    
    /* Admonition styling for warnings/notes */
    blockquote {
        border-left: 4px solid var(--quote-border);
        margin: 1rem 0;
        padding: 0.5rem 1rem;
        background-color: var(--quote-bg);
        border-radius: 0 4px 4px 0;
    }
    
    /* Command/terminal styling */
    code.hljs {
        border-radius: 4px;
    }
</style>

<!-- Version switcher script -->
<script src="/PiSovereign/theme/version-switcher.js" defer></script>
